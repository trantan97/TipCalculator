<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text_bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill_amount_text"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:padding="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/edit_bill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_bill_amount"
        />
    <TextView
        android:id="@+id/text_percent_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percent"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/text_bill_amount"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_percent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edit_bill_amount"
        app:layout_constraintStart_toStartOf="@id/edit_bill_amount"
        android:text="10%"/>
    <Button
        android:id="@+id/button_down_percent"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:text="-"
        android:textSize="@dimen/sp_20"
        app:layout_constraintStart_toEndOf="@id/text_percent"
        app:layout_constraintTop_toBottomOf="@id/edit_bill_amount"/>
    <Button
        android:id="@+id/button_up_percent"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:text="+"
        android:textSize="@dimen/sp_20"
        app:layout_constraintStart_toEndOf="@id/button_down_percent"
        app:layout_constraintTop_toBottomOf="@id/edit_bill_amount"/>
    <TextView
        android:id="@+id/text_tip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/text_percent_label"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.0"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/text_percent_label"
        app:layout_constraintStart_toStartOf="@id/edit_bill_amount"/>
    <TextView
        android:id="@+id/text_total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/text_tip_label"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.0"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/text_tip_label"
        app:layout_constraintStart_toStartOf="@id/edit_bill_amount"/>
    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginTop="@dimen/dp_45"
        app:layout_constraintTop_toBottomOf="@id/text_total_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>